{
  "name": "starter-express-prisma-jwt",
  "version": "1.0.0",
  "description": "A small, production-style Express + TypeScript starter with Prisma/Postgres, Zod validation, JWT auth (access + rotating refresh), Pino logs, Vitest/Supertest tests, Docker, and GitHub Actions.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "predev": "node scripts/stamp-build-meta.mjs",
    "postinstall": "prisma generate",
    "pretest": "node scripts/stamp-build-meta.mjs",
    "test": "cross-env TEST_ENV_FILE=.env.test vitest run",
    "audit:ci": "audit-ci --moderate",
    "pretest:cov": "node scripts/stamp-build-meta.mjs",
    "test:cov": "cross-env TEST_ENV_FILE=.env.test vitest run --coverage",
    "prebuild": "node scripts/stamp-build-meta.mjs",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "openapi:gen": "node scripts/generate-openapi.mjs",
    "setup:dev": "docker compose up -d db && npx prisma generate",
    "dev:up": "npm run setup:dev && npm run dev",
    "sessions:cleanup": "node scripts/cleanup-sessions.mjs",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "pretest:ci": "node scripts/stamp-build-meta.mjs",
    "test:ci": "cross-env TEST_ENV_FILE=.env.test vitest run --coverage",
    "check": "npm run typecheck && npm run lint && npm run test:ci",
    "secrets:scan": "node scripts/scan-secrets.mjs"
  },
  "engines": {
    "node": ">=20.19 <21"
  },
  "packageManager": "npm@10.8.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucanovello/starter-express-prisma-jwt.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lucanovello/starter-express-prisma-jwt/issues"
  },
  "homepage": "https://github.com/lucanovello/starter-express-prisma-jwt#readme",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@prisma/client": "^6.17.1",
    "@types/cors": "^2.8.19",
    "argon2": "^0.44.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "ipaddr.js": "^2.2.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.10",
    "pino": "10.0.0",
    "pino-http": "11.0.0",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.2.3",
    "redis": "^5.9.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.12"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.52.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.0",
    "@types/nodemailer": "^7.0.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^3.2.4",
    "audit-ci": "^7.1.0",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "license-checker-rseidelsohn": "^4.4.2",
    "lint-staged": "^16.2.6",
    "pino-pretty": "13.1.2",
    "prettier": "^3.6.2",
    "prisma": "^6.17.1",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
