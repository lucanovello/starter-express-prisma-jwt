{
  "name": "starter-express-prisma-jwt",
  "version": "1.0.0",
  "description": "A small, production-style Express + TypeScript starter with Prisma/Postgres, Zod validation, JWT auth (access + rotating refresh), Pino logs, Vitest/Supertest tests, Docker, and GitHub Actions.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "predev": "node scripts/stamp-build-meta.mjs",
    "pretest": "node scripts/stamp-build-meta.mjs",
    "pretest:cov": "node scripts/stamp-build-meta.mjs",
    "prebuild": "node scripts/stamp-build-meta.mjs",
    "dev": "tsx watch src/index.ts",
    "test": "cross-env ROLLUP_SKIP_NODEJS_NATIVE=1 vitest run",
    "test:cov": "cross-env ROLLUP_SKIP_NODEJS_NATIVE=1 vitest run --coverage",
    "build": "tsc",
    "openapi:gen": "node scripts/generate-openapi.mjs",
    "setup:dev": "docker compose up -d db && npx prisma generate",
    "dev:up": "npm run setup:dev && npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucanovello/starter-express-prisma-jwt.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lucanovello/starter-express-prisma-jwt/issues"
  },
  "homepage": "https://github.com/lucanovello/starter-express-prisma-jwt#readme",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@prisma/client": "^6.17.1",
    "@types/cors": "^2.8.19",
    "argon2": "^0.44.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "10.0.0",
    "pino-http": "11.0.0",
    "prom-client": "^15.1.3",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.1.0",
    "pino-pretty": "13.1.2",
    "prisma": "^6.17.1",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
